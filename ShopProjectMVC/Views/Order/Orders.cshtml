@model IEnumerable<ShopProjectMVC.Core.Models.Order>

    @{
        ViewData["Title"] = "Orders";
    }

   <table class="table">
       <thead>
           <tr>
               <th>ID</th>
               <th>Product</th>
               <th>Created at</th>
           </tr>
       </thead>
       <tbody>
        @foreach(var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.Product.Name</td>
                <td>@order.CreatedAt.ToString("yyyy-MM-dd")</td>
            </tr>
        }
    </tbody>
   </table>